[Unit]
Description=Prowlarr in VPN Namespace
After=network-online.target qbittorrent-vpn.service
Wants=network-online.target
Requires=vpn-namespace.service

[Service]
Type=simple
User=anon
Group=anon
NetworkNamespacePath=/run/netns/vpn
ExecStart=/opt/Prowlarr/Prowlarr -nobrowser -data=/home/anon/.config/Prowlarr
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
