[Unit]
Description=qBittorrent in VPN Namespace
After=network-online.target vpn-namespace.service
Wants=network-online.target
Requires=vpn-namespace.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/home/anon/nas-media-server/scripts/qbt-vpn-start.sh start
ExecStop=/home/anon/nas-media-server/scripts/qbt-vpn-start.sh stop
ExecReload=/home/anon/nas-media-server/scripts/qbt-vpn-start.sh rotate
TimeoutStartSec=120

[Install]
WantedBy=multi-user.target
